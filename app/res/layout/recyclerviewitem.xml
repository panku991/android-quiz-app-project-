<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_gravity="center_horizontal"
    android:background="#0088FF"
    android:backgroundTint="#0FD6B7"
    android:layout_marginBottom="2dp">


    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_vert"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/fetchTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello this is the test name "
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/idTag"
            android:layout_below="@id/fetchTestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID : "
            android:textColor="@color/white"

            />
        <TextView
            android:id="@+id/fetchTestId"
            android:layout_below="@id/fetchTestName"
            android:layout_toEndOf="@id/idTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is id of test"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/TOTTag"
            android:layout_below="@id/idTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Questions : "
            android:textColor="@color/white"
            />


        <TextView
            android:id="@+id/fetchTotalQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fetchTestId"
            android:text="20"
            android:layout_toEndOf="@id/TOTTag"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>